<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:background="@drawable/nav_drawer_header"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/nav_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_header_emailaddress"
        android:layout_alignParentStart="true"
        android:text="User Name"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_header_emailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:singleLine="true"
        android:text="user_email_address@email.com"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:clickable="true"
        android:id="@+id/nav_header_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/arrow_selector" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/nav_header_profile"
        android:id="@+id/nav_header_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:scaleType="centerCrop" />


</RelativeLayout>